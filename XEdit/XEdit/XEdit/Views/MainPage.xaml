    <ContentPage.Content>
        <Grid RowSpacing="0" ColumnSpacing="0" BackgroundColor="Black">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="70" />
                <RowDefinition Height="35" />
            </Grid.RowDefinitions>

            <!--Header-->

            <Grid Grid.Row="0" 
                  BackgroundColor="Black"
                  HorizontalOptions="Fill"
                  VerticalOptions="Fill" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="25" />
                </Grid.ColumnDefinitions>

                <Button BackgroundColor="Black"
                        Grid.Column="0"
                        HeightRequest="20" 
                        WidthRequest="25"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center"
                        Image="menu_list.png"
                        Command="{Binding LoadImageCommand }"
                        CommandParameter="{Reference skiaWrapper}">
                </Button>
                <Button BackgroundColor="Black"
                        Grid.Column="2"
                        HeightRequest="20" 
                        WidthRequest="20" 
                        VerticalOptions="Center" 
                        HorizontalOptions="Start"
                        Image="arrow_left.png">
                </Button>
                <Button BackgroundColor="Black"
                        Grid.Column="3"
                        HeightRequest="20" 
                        WidthRequest="20" 
                        VerticalOptions="Center" 
                        HorizontalOptions="Start"
                        Image="arrow_right.png">
                </Button>

            </Grid>

            
            <Grid Grid.Row="1" x:Name="skiaWrapper" HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="Black">
                <!--<skia:SKCanvasView x:Name="viewContainer"></skia:SKCanvasView>-->
            </Grid>
            
            <Slider Grid.Row="2"
                    HorizontalOptions="Fill"
                    MinimumTrackColor="CadetBlue"
                    MaximumTrackColor="Red"
                    BackgroundColor="Black"
                    ThumbColor="White"></Slider>
            
            <!--tools options-->
            <ScrollView Grid.Row="3"
                        HorizontalOptions="Fill"
                        BackgroundColor="SkyBlue"                                               
                        Orientation="Horizontal" 
                        >
                <StackLayout Orientation="Horizontal" Spacing="0">
                    <BoxView WidthRequest="90" BackgroundColor="AliceBlue" />
                    <BoxView WidthRequest="90" BackgroundColor="OliveDrab" />
                    <BoxView WidthRequest="90" BackgroundColor="Yellow" />
                    <BoxView WidthRequest="90" BackgroundColor="Wheat" />
                    <BoxView WidthRequest="90" BackgroundColor="Pink" />
                </StackLayout>
            </ScrollView>

            <!--edit tools-->
            <!--<ScrollView Grid.Row="4"
                        HorizontalOptions="Fill"                      
